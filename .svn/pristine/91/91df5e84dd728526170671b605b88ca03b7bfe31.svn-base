body {
	background-image: url(../img/bg.jpg);
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
}

.container {
	margin-top: 100px;
}

.container .row .col-md-offset-3 {
	margin-left: 350px;
}

.form-horizontal {
	background: #FFF;
	padding-bottom: 30px;
	border-radius: 15px;
	text-align: center;
}

.form-horizontal .heading {
	display: block;
	font-size: 35px;
	color: #DCDCDC;
	font-weight: 700;
	padding: 20px 0;
	border-bottom: 1px solid #f0f0f0;
	margin-bottom: 30px;
}

.form-horizontal .form-group {
	padding: 0 60px;
	margin: 0 0 30px 10px;
	position: relative;
}

.form-horizontal .form-group2 {
	padding: 0 60px;
	margin: 0 0 30px 10px;
	position: relative;
	margin-left: 10px;
}

.form-horizontal .form-group3 {
	padding: 0 60px;
	margin: 0 0 30px 10px;
	position: relative;
}

.form-horizontal .form-group-birth {
	padding-left: 0px;
	padding-right: 30px;
	margin: 0 0 30px 10px;
	position: relative;
}

.form-horizontal .form-group-address {
	padding: 0 60px;
	padding-left: 35px;
	margin: 0 0 30px 10px;
	position: relative;
}

.form-horizontal .form-control {
	background: #f0f0f0;
	border: none;
	border-radius: 20px;
	box-shadow: none;
	padding: 0 20px;
	width: 300px;
	height: 40px;
	transition: all 0.3s ease 0s;
}

.form-horizontal .form-control-address {
	background: #f0f0f0;
	border: none;
	border-radius: 20px;
	box-shadow: none;
	padding: 0 20px;
	width: 300px;
	height: 40px;
	resize: vertical;
	transition: all 0.3s ease 0s;
}

.form-horizontal .form-control-birth {
	background: #f0f0f0;
	border: none;
	border-radius: 20px;
	box-shadow: none;
	padding: 0 10px;
	width: 98px;
	height: 40px;
	transition: all 0.3s ease 0s;
}

.form-horizontal .form-control:focus {
	background: #e0e0e0;
	box-shadow: none;
	outline: 0 none;
}

.form-horizontal .text-muted {
	float: left;
	font-size: 16px;
	margin-left: 7px;
	line-height: 20px;
	padding-top: 10px;
	text-transform: capitalize;
}

#nameCheck {
	position: absolute;
	right: 250px;
	top: 35px;
	color: red;
}
#pwdCheck {
	position: absolute;
	right: 250px;
	top: 35px;
	color: red;
}

.form-horizontal .btn {
	float: right;
	font-size: 14px;
	color: #fff;
	background: #00b4ef;
	border-radius: 30px;
	padding: 10px 25px;
	margin-right: 25px;
	border : none;
	text-transform: capitalize;
	transition: all 0.5s ease 0s;
	border: none;
}